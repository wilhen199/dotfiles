    net_avg_samples = 2,			-- The number of samples to average for net data
    no_buffers = true,				-- Subtract (file system) buffers from used memory?
    text_buffer_size=256,
    update_interval = 2.0,			-- Update interval


    --Placement

    alignment = 'top_right',
    gap_x = 10,
    gap_y = 30,
    minimum_height = 5,
    minimum_width = 30,


